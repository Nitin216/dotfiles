" set debug
set ignorecase
set smartcase
set hlsearch
set scrolloff=25

nnoremap <CR> :noh<CR>
inoremap jk <esc>
nnoremap <esc> nop
set number
set relativenumber

set clipboard=unnamed

nmap <Space>o :xccmd openQuickly<CR>
nmap <C-r> :run<CR>

nnoremap L :xccmd goForwardInHistoryByCommand<CR>
nnoremap H :xccmd goBackInHistoryByCommand<CR>

" Mapping opening new editor in adjacent
nnoremap <space>t :xccmd openInAdjacentEditorWithAlternate<CR>

"nnoremap <space>q :xccmd removeAssistantEditor<CR>

" Mapping full screen 
nnoremap <space>ff :xccmd toggleFullScreen<CR>

nnoremap <C-s> :source ~/.xvimrc<CR>

nnoremap <C-h> <C-w>h<CR>
nnoremap <C-l> <C-w>l<CR>

nnoremap <space>f zc<CR>
nnoremap <space>fa zM<CR>
nnoremap <space>uf zo<CR>
nnoremap <space>ufa zr<CR>

nnoremap <space>w :write<CR>
nnoremap <space>sv :source ~/.xvimrc<CR>
" Search the string cursor to. Very useful
map ,s viw:xccmd findSelectedTextInWorkspace<CR>
" Mapping toggleBreakpoint
nmap <space>b :xccmd toggleBreakpointAtCurrentLine<CR>
" Save when esc
ino <ESC> <ESC>:xcmenucmd Save<CR>

" tab new
map ,tn :xccmd newTab<CR>
" tab close
map ,tc :tabclose<CR>
" tab pre
map ,ti :xccmd selectPreviousTab<CR>
" tab next
map ,to :xccmd selectNextTab<CR>

" Custom configs
nnoremap B ^
nnoremap E $
nnoremap $ <nop>

" Mapping of creating splits
map - :split<CR>


" Disable Arrow keys in Normal mode
map <up> <nop>
map <down> <nop>
map <left> <nop>
map <right> <nop>

" Disable Arrow keys in Insert mode
imap <up> <nop>
imap <down> <nop>
imap <left> <nop>
imap <right> <nop>

